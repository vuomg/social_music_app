{
  "rules": {
    ".read": "auth != null",
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "posts": {
      "$postId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "uid": {
          ".validate": "newData.isString()"
        },
        "caption": {
          ".validate": "newData.isString() || newData.val() == null"
        },
        "musicId": {
          ".validate": "newData.isString()"
        },
        "musicTitle": {
          ".validate": "newData.isString()"
        },
        "audioUrl": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "likesCount": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "commentCount": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        }
      }
    },
    "postLikes": {
      "$postId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    "comments": {
      "$postId": {
        "$commentId": {
          ".read": "auth != null",
          ".write": "auth != null",
          "uid": {
            ".validate": "newData.isString()"
          },
          "content": {
            ".validate": "newData.isString()"
          },
          "createdAt": {
            ".validate": "newData.isNumber()"
          }
        }
      }
    },
    "musicRooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "hostUid": {
          ".validate": "newData.isString()"
        },
        "musicId": {
          ".validate": "newData.isString() || newData.val() == null"
        },
        "audioUrl": {
          ".validate": "newData.isString() || newData.val() == null"
        },
        "isPlaying": {
          ".validate": "newData.isBoolean()"
        },
        "currentPositionMs": {
          ".validate": "newData.isNumber()"
        },
        "members": {
          "$uid": {
            ".write": "auth != null && auth.uid == $uid"
          }
        }
      }
    }
  }
}